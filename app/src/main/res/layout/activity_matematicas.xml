<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="chiroque.aplicaciones.com.escuelainformatica.Matematicas.Matematicas">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView
                style="@style/textviewteoria"
                android:padding="4dp"
                android:text="Los temas a ser tomados en cuenta son:"/>
            <Button
                style="@style/textviewteoria"
                android:onClick="derivadas"
                android:text="Derivadas"/>
            <Button
                style="@style/textviewteoria"
                android:onClick="matrices"
                android:text="Matrices"/>
            <Button
                style="@style/textviewteoria"
                android:onClick="Prodmatrices"
                android:text="Producto Matrices"/>
            <Button
                style="@style/textviewteoria"
                android:onClick="sistemaEcuaciones"
                android:text="Sistema Ecuaciones"/>
            <Button
                style="@style/textviewteoria"
                android:onClick="converAngulos"
                android:text="Conversión Angulos"/>
            <Button
                style="@style/textviewteoria"
                android:onClick="formulIntegrales"
                android:text="Integrales Formulas"/>
            <Button
                style="@style/textviewteoria"
                android:onClick="IntegralNum"
                android:text="Integral Numérica"/>
            </LinearLayout>
    </ScrollView>
</LinearLayout>
