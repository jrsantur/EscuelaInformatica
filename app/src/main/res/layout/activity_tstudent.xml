<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="chiroque.aplicaciones.com.escuelainformatica.Estadistica.Tstudent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/fullwrap.000099"
            android:textSize="15dp"
            android:padding="4dp"
            android:text="Grados de Libertad : "/>
        <EditText
            android:id="@+id/Textgradlib"
            style="@style/textviewteoria"
            android:background="@drawable/borde"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/fullwrap.negrita"
            android:textSize="25dp"
            android:padding="4dp"
            android:text=" t "/>
        <Spinner
            android:id="@+id/spinsigno"
            style="@style/fullwrap"></Spinner>
        <EditText
            android:id="@+id/textT"
            style="@style/textviewteoria"
            android:background="@drawable/borde"/>
        </LinearLayout>
    <LinearLayout
        style="@style/textviewteoria"
        android:background="#FFF0FF"
        android:orientation="vertical">
        <Button
            style="@style/fullwrap"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:onClick="valordeT"
            android:text="Aceptar"/>
        <TextView
            android:id="@+id/textview1"
            style="@style/textviewteoria.0000CD"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:padding="10dp"
            android:text="Probabilidad resultante:"/>
        <EditText
            android:id="@+id/editTresult"
            style="@style/fullwrap"
            android:enabled="false"
            android:background="@drawable/borde"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:hint="Resultado a hallar"/>
    </LinearLayout>
</LinearLayout>
