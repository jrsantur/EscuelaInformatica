<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="chiroque.aplicaciones.com.escuelainformatica.TecnologiaWeb.Bootstrap">

    <ScrollView
        style="@style/textviewteoria">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView
                android:text="@string/concepto_bootstrap"
                style="@style/textviewteoria.000036" />
            <HorizontalScrollView
                style="@style/textviewteoria">
                <ImageView
                    style="@style/fullwrap"
                    android:src="@drawable/usobootstrap"/>
            </HorizontalScrollView>
            <TextView
                android:text="@string/concepto2_bootstrap"
                style="@style/textviewteoria.000036" />
            <Spinner
                android:id="@+id/spinbootstrap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></Spinner>
            <TextView
                android:id="@+id/txtbootstrap"
                android:text="@string/c_bootstrap_colmd"
                style="@style/textviewteoria.000099" />
            <HorizontalScrollView
                style="@style/textviewteoria">
                <ImageView
                    android:id="@+id/imgbootstrapA"
                    style="@style/fullwrap"
                    android:src="@drawable/rejillaboots1"/>
            </HorizontalScrollView>
            <TextView
                android:text="@string/bootstrap_nota"
                style="@style/textviewteoria.000099" />
            <HorizontalScrollView
                style="@style/textviewteoria">
                <ImageView
                    android:id="@+id/imgbootstrapB"
                    style="@style/fullwrap"
                    android:src="@drawable/vistarb1"/>
            </HorizontalScrollView>
            <TextView
                android:text="@string/concepto3_bootstrap"
                style="@style/textviewteoria.000036" />
            <TextView
                android:text="@string/fuente_bootstrap"
                style="@style/textviewteoria" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
