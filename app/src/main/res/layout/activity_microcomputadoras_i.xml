<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="chiroque.aplicaciones.com.escuelainformatica.MicrocomputadorasI.MicrocomputI">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView
                style="@style/textviewteoria"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="4dp"
                android:text="Los temas tomados en cuenta de este curso son:"/>
            <LinearLayout
                style="@style/textviewteoria"
                android:padding="5dp"
                android:background="#ffb1dde0"
                android:orientation="vertical">
                <Button
                    style="@style/textviewteoria"
                    android:onClick="arquitect8086"
                    android:text="Arquitectura del 8086"/>
                <Button
                    style="@style/textviewteoria"
                    android:onClick="registr8086"
                    android:text="Registros del 8086"/>
                <Button
                    style="@style/textviewteoria"
                    android:onClick="memoriasegm"
                    android:text="Memoria Segmentacion"/>
                <Button
                    style="@style/textviewteoria"
                    android:onClick="memoriadirec"
                    android:text="Memoria Direccionamiento"/>
                <Button
                    style="@style/textviewteoria"
                    android:onClick="asemblercomandos"
                    android:text="Comandos de Assembler"/>
                <Button
                    style="@style/textviewteoria"
                    android:onClick="interrup"
                    android:text="Interrupciones"/>
                <Button
                    style="@style/textviewteoria"
                    android:onClick="entrsalid8086"
                    android:text="E/S 8086"/>
                <Button
                    style="@style/textviewteoria"
                    android:onClick="contr8259"
                    android:text="Controlador 8259"/>
                <Button
                    style="@style/textviewteoria"
                    android:onClick="cop8087"
                    android:text="Coprocesador 8087"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
