<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#000"
    tools:context="chiroque.aplicaciones.com.escuelainformatica.MicrocomputadorasI.Copr8087">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView
                style="@style/textviewteoria.FFF"
                android:text="@string/concepto_copr8087"/>
            <HorizontalScrollView
                style="@style/textviewteoria">
                <ImageView
                    style="@style/fullwrap"
                    android:src="@drawable/c8087"/>
            </HorizontalScrollView>
            <TextView
                style="@style/textviewteoria.3333FF"
                android:text="@string/descr_img_copr8087"/>
            <TextView
                style="@style/textviewteoria.FFF"
                android:text="@string/concepto_copr8087_2"/>
            <LinearLayout
                style="@style/fullwrap"
                android:background="#FFF">
                <Spinner
                    android:id="@+id/spincmd8087"
                    style="@style/fullwrap"></Spinner>
            </LinearLayout>
            <TextView
                android:id="@+id/txttiposcom8087"
                style="@style/textviewteoria.CCCCCC"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
