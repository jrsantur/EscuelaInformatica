<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="chiroque.aplicaciones.com.escuelainformatica.RedesInformatica.AtaqueInformatico">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView
                style="@style/textviewteoria.000066"
                android:background="@drawable/bordemoradofondoyellow"
                android:padding="4dp"
                android:text="@string/concepto_ataque_informatico"/>
            <TextView
                style="@style/textviewteoria.000066"
                android:textColor="#000066"
                android:padding="4dp"
                android:text="@string/tecnicas_ataque_informatico"/>
            <TextView
                style="@style/textviewteoria.0000FF"
                android:background="#99FF99"
                android:text="@string/consecuencias_ataque_informatico"/>
            <TextView
                style="@style/textviewteoria"
                android:text="@string/nota_fuente_ataquesinform"/>
            </LinearLayout>
    </ScrollView>
</LinearLayout>
