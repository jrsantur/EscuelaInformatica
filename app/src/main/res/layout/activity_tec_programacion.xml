<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="chiroque.aplicaciones.com.escuelainformatica.Programation.TecProgramacion">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView
                style="@style/textviewteoria.000036"
                android:text="@string/concepto_tec_programacion"/>
            <LinearLayout
                style="@style/textviewteoria"
                android:orientation="vertical">
                <TextView
                    style="@style/textviewteoria.0000FF"
                    android:text="@string/premisa_spin_tecprog"/>
                <Spinner
                    android:id="@+id/spintecprogr"
                    style="@style/textviewteoria"></Spinner>
            </LinearLayout>
            <TextView
                android:id="@+id/teoria_tec_prog"
                style="@style/textviewteoria.000099"/>
            <TextView
                style="@style/textviewteoria"
                android:text="@string/fuente_tec_programacion"/>
            </LinearLayout>
    </ScrollView>
</LinearLayout>
