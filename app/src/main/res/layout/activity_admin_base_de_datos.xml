<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="chiroque.aplicaciones.com.escuelainformatica.AdmBaseDeDatos.AdminBaseDeDatos">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
      <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <TextView
            style="@style/textviewteoria"
            android:text="Los temas tomados en cuenta son:"/>
        <TextView
            style="@style/textviewteoria.negrita"
            android:layout_marginTop="4px"
            android:text="Esta sección se basa en SQL Server"/>
        <Button
            style="@style/textviewteoria"
            android:onClick="abrirActivitCrearBaseDeDatos"
            android:text="Creación de base de datos"/>
        <Button
            style="@style/textviewteoria"
            android:onClick="abrirActivitCrearDropTabla"
            android:text="Crear y eliminar tabla"/>
        <Button
            style="@style/textviewteoria"
            android:onClick="abrirActivitInsertSelectTabla"
            android:text="Insertar y recuperar registros - Campo Identity"/>
        <Button
            style="@style/textviewteoria"
            android:onClick="abrirActivitDeleteUpdateTabla"
            android:text="Borrar y actualizar registros"/>
        <Button
            style="@style/textviewteoria"
            android:onClick="abrirActivitProcedimAlmacenados"
            android:text="Procedimientos Almacenados"/>
        <Button
            style="@style/textviewteoria"
            android:onClick="abrirActivitFuncionesSABD"
            android:text="Funciones"/>
        <Button
            style="@style/textviewteoria"
            android:onClick="abrirActivitTriggers"
            android:text="Trigger"/>
      </LinearLayout>
    </ScrollView>
</LinearLayout>

