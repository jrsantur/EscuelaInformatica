<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="chiroque.aplicaciones.com.escuelainformatica.Estadistica.ChiCuadrado">

        <LinearLayout
            style="@style/textviewteoria"
            android:background="#CCFF99"
            android:orientation="horizontal">
            <TextView
                style="@style/fullwrap.000099"
                android:text="Grados Libertad:"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/editTextGL"
                style="@style/textviewteoria"
                android:background="@drawable/borde"/>
            </LinearLayout>
        <LinearLayout
            style="@style/textviewteoria"
            android:background="#CCFFCC"
            android:orientation="horizontal">
            <TextView
                style="@style/fullwrap.000099"
                android:text="Probab.(nivel signific.):"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/editTextProb"
                style="@style/textviewteoria"
                android:background="@drawable/borde"/>
        </LinearLayout>
    <LinearLayout
        style="@style/textviewteoria"
        android:background="#F0F8FF"
        android:orientation="vertical">
        <Button
            style="@style/fullwrap"
            android:gravity="center"
            android:onClick="aceptarChi"
            android:layout_gravity="center_horizontal"
            android:text="Aceptar"/>
        <TextView
            style="@style/fullwrap"
            android:layout_gravity="center_horizontal"
            android:textColor="#0000CD"
            android:textSize="16dp"
            android:padding="10dp"
            android:text="Valor hallado (Chi de tabla):"/>
        <TextView
            android:id="@+id/ResultChi2"
            android:background="@drawable/borde"
            style="@style/fullwrap"
            android:layout_gravity="center_horizontal"
            android:hint="Resultado"/>
        </LinearLayout>
</LinearLayout>
