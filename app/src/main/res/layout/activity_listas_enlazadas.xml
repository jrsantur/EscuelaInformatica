<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="chiroque.aplicaciones.com.escuelainformatica.EstructuraDeDatos.ListasEnlazadas">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txttituloListasEnlazadas"
                style="@style/textviewteoria.000066"
                android:textStyle="bold"
                android:textSize="25px"
                android:text="Listas Enlazadas:"/>
            <TextView
                style="@style/textviewteoria"
                android:scrollbars="vertical"
                android:text="@string/concepto_listas_enlazadas"/>
            <TextView
                style="@style/textviewteoria"
                android:layout_marginTop="4px"
                android:textColor="#CC0066"
                android:text="Tipos de listas enlazadas:"/>
            <TextView
                android:background="@drawable/borde"
                style="@style/textviewteoria.000099"
                android:padding="2dp"
                android:text="Listas enlazadas lineales"/>
            <TextView
                style="@style/textviewteoria.000066"
                android:layout_marginLeft="15px"
                android:text="Listas simples enlazadas:"/>
            <TextView
                style="@style/textviewteoria"
                android:layout_marginLeft="3dp"
                android:scrollbars="vertical"
                android:text="@string/concepto_listas_simples_enlazadas"/>
            <TextView
                style="@style/textviewteoria.000066"
                android:layout_marginLeft="15px"
                android:text="Listas doblemente enlazadas:"/>
            <TextView
                style="@style/textviewteoria"
                android:layout_marginLeft="3dp"
                android:scrollbars="vertical"
                android:text="@string/concepto_listas_doble_enlazadas"/>
            <TextView
                android:background="@drawable/borde"
                style="@style/textviewteoria.000099"
                android:padding="2dp"
                android:layout_marginTop="2dp"
                android:text="Listas enlazadas circulares"/>
            <TextView
                style="@style/textviewteoria"
                android:layout_marginLeft="3dp"
                android:scrollbars="vertical"
                android:text="@string/concepto_listas_enlazadas_circulares"/>
            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView
                    style="@style/fullwrap"
                    android:src="@drawable/listascirculares"/>
            </HorizontalScrollView>
            <TextView
                style="@style/textviewteoria.0000FF"
                android:text="Ejemplo: Lista Enlazada con 3 valores"
                android:layout_marginBottom="2dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                style="@style/textviewteoria.000066"
                android:layout_marginLeft="3dp"
                android:text="Listas enlazadas simples circulares:"/>
            <TextView
                style="@style/textviewteoria"
                android:layout_marginLeft="15px"
                android:scrollbars="vertical"
                android:text="@string/concepto_listas_simples_circulares"/>
            <TextView
                style="@style/textviewteoria.000066"
                android:layout_marginLeft="3dp"
                android:text="Listas enlazadas dobles circulares:"/>
            <TextView
                style="@style/textviewteoria"
                android:layout_marginLeft="3dp"
                android:scrollbars="vertical"
                android:text="@string/concepto_listas_dobles_circulares"/>
            <TextView
                style="@style/textviewteoria"
                android:layout_marginTop="2dp"
                android:textColor="#CC0066"
                android:text="Ventajas"/>
            <TextView
                style="@style/textviewteoria"
                android:scrollbars="vertical"
                android:text="@string/ventajas_listas_enlazadas"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
