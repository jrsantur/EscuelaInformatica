<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="chiroque.aplicaciones.com.escuelainformatica.RedesInformatica.IPv6">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView
                style="@style/textviewteoria.000066"
                android:background="@drawable/borde"
                android:layout_marginBottom="2dp"
                android:padding="4dp"
                android:text="@string/concepto_ipv6"/>
            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView
                    style="@style/fullwrap"
                    android:layout_marginLeft="4px"
                    android:src="@drawable/ipv6address"/>
            </HorizontalScrollView>
            <TextView
                style="@style/textviewteoria.000066"
                android:background="@drawable/bordemorado"
                android:layout_marginBottom="2dp"
                android:padding="4dp"
                android:text="@string/multicast_ipv6"/>
            <TextView
                style="@style/textviewteoria.000066"
                android:background="@drawable/bordeazul"
                android:padding="4dp"
                android:text="@string/direccionamiento_ipv6"/>
            <TextView
                style="@style/textviewteoria.000066"
                android:text="@string/notacion_ipv6"/>
            <TextView
                style="@style/textviewteoria"
                android:text="@string/nota_fuente_ipv6"/>
            </LinearLayout>
    </ScrollView>
</LinearLayout>
