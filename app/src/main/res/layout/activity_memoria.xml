<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#000"
    tools:context="chiroque.aplicaciones.com.escuelainformatica.MicrocomputadorasII.Memoria">
    <ScrollView
        style="@style/textviewteoria">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView
                android:text="@string/concepto_memoria"
                style="@style/textviewteoria.FFF" />
            <HorizontalScrollView
                style="@style/textviewteoria">
                <ImageView
                    style="@style/fullwrap"
                    android:src="@drawable/memram"/>
            </HorizontalScrollView>
            <TextView
                android:text="@string/descr_img_memoria"
                style="@style/textviewteoria.3333FF" />
            <TextView
                android:text="@string/concepto2_memoria"
                style="@style/textviewteoria.FFF" />
            <TextView
                android:text="@string/fuente_memoria"
                style="@style/textviewteoria.CCCCCC" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
