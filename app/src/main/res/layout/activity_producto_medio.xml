<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="chiroque.aplicaciones.com.escuelainformatica.SimulacionDeSistemas.ProductoMedio">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/fullwrap"
            android:text="R0: "/>
        <LinearLayout
            style="@style/textviewteoria"
            android:orientation="vertical">
            <EditText
                android:id="@+id/txtr0PM"
                android:layout_width="140px"
                android:layout_gravity="right"
                android:layout_marginRight="40px"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:background="@drawable/borde"/>
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        style="@style/textviewteoria"
        android:orientation="horizontal"
        android:paddingTop="4px">
        <TextView
            style="@style/fullwrap"
            android:text="R1: "/>
        <LinearLayout
            style="@style/textviewteoria"
            android:orientation="vertical">
            <EditText
                android:id="@+id/txtr1PM"
                android:layout_width="140px"
                android:layout_gravity="right"
                android:layout_marginRight="40px"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:background="@drawable/borde"/>
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        style="@style/textviewteoria"
        android:orientation="horizontal"
        android:paddingTop="4px">
        <TextView
            style="@style/fullwrap"
            android:text="Nº cifras de aleatorios :"/>
        <Spinner
            android:id="@+id/spinNCifrasaleatPM"
            style="@style/fullwrap"
            android:layout_marginLeft="4dp">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/fullwrap"
            android:text="Nº aleatorios generados : "/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/txtNAleatoriosPM"
                android:layout_width="100px"
                android:layout_gravity="right"
                android:layout_marginRight="40px"
                android:layout_height="wrap_content"
                android:background="@drawable/borde"
                android:maxLength="2"/>
            </LinearLayout>
    </LinearLayout>
    <Button
        style="@style/fullwrap"
        android:text="Generar números"
        android:paddingBottom="6px"
        android:layout_gravity="center_horizontal"
        android:onClick="btnGenerarNrosAleatoriosPM"/>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:id="@+id/tablaNroAleatPM"
            android:background="@drawable/borde"
            style="@style/fullwrap"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible">
        </TableLayout>
    </ScrollView>
</LinearLayout>
