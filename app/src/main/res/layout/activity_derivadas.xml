<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="chiroque.aplicaciones.com.escuelainformatica.Matematicas.Derivadas">

    <LinearLayout
        style="@style/textviewteoria"
        android:background="#66FFFF"
        android:orientation="horizontal">
        <TextView
            style="@style/fullwrap"
            android:textColor="#000"
            android:text="Funcion:"/>
        <EditText
            android:id="@+id/edtFuncion"
            style="@style/textviewteoria"
            android:layout_margin="4dp"
            android:background="@drawable/borde"/>
    </LinearLayout>
    <Button
        style="@style/textviewteoria"
        android:onClick="btnDerivar"
        android:text="DERIVAR"/>
    <TextView
        style="@style/textviewteoria.0000FF"
        android:textStyle="bold"
        android:background="#CCCCCC"
        android:text="RPTA:"/>
    <LinearLayout
        style="@style/textviewteoria.CCCCCC"
        android:layout_marginBottom="3dp">
        <TextView
            style="@style/fullwrap"
            android:text="f'(x)="/>
        <TextView
            android:id="@+id/txtRptaDerivada"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ScrollView
        style="@style/textviewteoria">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView
                style="@style/textviewteoria.FFFF33"
                android:background="#3300FF"
                android:text="RECOMENDACIONES:"/>
            <TextView
                style="@style/textviewteoria.FFF"
                android:background="#3300FF"
                android:padding="2dp"
                android:textStyle="bold"
                android:text="@string/nota_derivadas"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
