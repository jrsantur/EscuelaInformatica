<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="chiroque.aplicaciones.com.escuelainformatica.EstructuraDeDatos.TiposDeDatos">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txttituloTipoDeDatos"
                style="@style/textviewteoria.000066"
                android:textStyle="bold"
                android:text="Tipo de Dato (Concepto):"/>
            <TextView
                android:id="@+id/txtTipoDatoConcepto"
                style="@style/textviewteoria"
                android:scrollbars="vertical"/>
            <TextView
                style="@style/textviewteoria.990099"
                android:textStyle="bold"
                android:layout_marginTop="4px"
                android:text="Tipos de Datos Primitivos:"/>
            <TextView
                style="@style/textviewteoria"
                android:text="@string/concepto_tipos_de_datos_primitivos"/>
            <TextView
                style="@style/textviewteoria.330000"
                android:text="Caracteres:"/>
            <TextView
                style="@style/textviewteoria.000066"
                android:text="@string/concepto_caracteres"/>
            <TextView
                style="@style/textviewteoria.330000"
                android:textSize="25px"
                android:text="Caracteres Unicode:"/>
            <TextView
                style="@style/textviewteoria.000066"
                android:text="@string/concepto_caracteres_unicode"/>
            <TextView
                style="@style/textviewteoria.330000"
                android:text="Enteros:"/>
            <TextView
                style="@style/textviewteoria.000066"
                android:text="@string/concepto_enteros"/>
            <TextView
                style="@style/textviewteoria.330000"
                android:text="Reales:"/>
            <TextView
                android:id="@+id/txtConceptoReales"
                style="@style/textviewteoria.000066"
                android:layout_marginBottom="8px"
                android:text="@string/concepto_reales"/>
            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tablatiposdedatosjava"/>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
