<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="chiroque.aplicaciones.com.escuelainformatica.Estadistica.DistZnormal">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView
                style="@style/textviewteoria"
                android:padding="4dp"
                android:text="N(μ,σ) Donde desviación típica diferente de 0"/>
            <LinearLayout
                style="@style/textviewteoria"
                android:background="#FFFF00"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    style="@style/fullwrap.0000FF"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:text=" μ         (media)       :"/>
                <EditText
                    android:id="@+id/textMedia"
                    style="@style/textviewteoria"
                    android:background="@drawable/borde"
                    android:textStyle="bold"
                    android:padding="5dp"/>
            </LinearLayout>
            <LinearLayout
                style="@style/textviewteoria"
                android:background="#FFFF00"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/fullwrap.0000FF"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:text="σ (Desviación típ.):"/>
                <EditText
                    android:id="@+id/textDesv"
                    style="@style/textviewteoria"
                    android:textStyle="bold"
                    android:background="@drawable/borde"
                    android:padding="5dp"/>
            </LinearLayout>
            <TextView
                style="@style/textviewteoria"
                android:padding="4dp"
                android:text="Ingrese uno o los 2 valores del intervalo de x:"/>
            <LinearLayout
                style="@style/textviewteoria"
                android:background="#66CCFF">
                <TextView
                    style="@style/fullwrap"
                    android:padding="4dp"
                    android:text="p("/>
                <EditText
                    android:id="@+id/x1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borde"
                    android:padding="4dp"/>
                <TextView
                    style="@style/fullwrap"
                    android:text="  ≤ x ≤ "/>
                <EditText
                    android:id="@+id/x2"
                    android:layout_width="80dp"
                    android:padding="4dp"
                    android:background="@drawable/borde"
                    android:layout_height="wrap_content" />
                <TextView
                    style="@style/fullwrap"
                    android:padding="4dp"
                    android:text=")"/>
            </LinearLayout>
            <Button
                style="@style/fullwrap.0000FF"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_gravity="center"
                android:onClick="zValor"
                android:text="Aceptar"/>
            <LinearLayout
                style="@style/textviewteoria">
                <TextView
                    style="@style/fullwrap"
                    android:padding="5dp"
                    android:textSize="20dp"
                    android:text="Resultado :"/>
                <TextView
                    android:id="@+id/textViewProbT"
                    style="@style/textviewteoria"
                    android:textSize="20dp"
                    android:background="@drawable/borde"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
